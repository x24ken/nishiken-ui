{
  "name": "nishiken-ui",
  "version": "2.0.0-alpha.1",
  "description": "A design system built with React, TypeScript, and Tailwind CSS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/index.css",
    "./package.json": "./package.json",
    "./src/*": "./src/*",
    "./components/*": "./src/components/*"
  },
  "files": [
    "dist",
    "src"
  ],
  "workspaces": [
    ".",
    "design-system-mcp"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "vite build --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "typecheck": "tsc --noEmit",
    "mcp:build": "npm run build --workspace=nishiken-ui-mcp",
    "mcp:dev": "npm run dev --workspace=nishiken-ui-mcp",
    "mcp:start": "npm run start --workspace=nishiken-ui-mcp"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@eslint/js": "^10.0.0",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-interactions": "^8.5.0",
    "@storybook/addon-links": "^8.5.0",
    "@storybook/addon-onboarding": "^8.5.0",
    "@storybook/blocks": "^8.5.0",
    "@storybook/react": "^8.5.0",
    "@storybook/react-vite": "^8.5.0",
    "@storybook/test": "^8.5.0",
    "@tailwindcss/vite": "4.0.0-beta.7",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "eslint-plugin-storybook": "^0.12.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "storybook": "^8.5.0",
    "tailwindcss": "4.0.0-beta.7",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.0.0"
  },
  "keywords": [
    "react",
    "typescript",
    "tailwindcss",
    "design-system",
    "ui-components"
  ],
  "author": "nishiken",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x24ken/nishiken-ui.git"
  },
  "homepage": "https://github.com/x24ken/nishiken-ui"
}
